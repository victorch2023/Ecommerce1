rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Imágenes de productos: lectura pública, escritura autenticada
    match /products/{productId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Imágenes de perfil de usuario: lectura pública, escritura solo del dueño
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Cualquier otro archivo: solo lectura para usuarios autenticados
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}




